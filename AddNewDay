function AddNewDay() {
  var spreadsheet = SpreadsheetApp.getActiveSpreadsheet();
  var ТаблицаЛист_2 = SpreadsheetApp.getActiveSpreadsheet().getActiveSheet();
  var ПоследняяСтрока = ТаблицаЛист_2.getLastRow();

  // делаем ячейки с "дата":

  var ДатаСлово = ТаблицаЛист_2.getRange((ПоследняяСтрока + 1), 1);
  ДатаСлово.setValue("Дата:");

  // закрашиваем область в серый цвет:

  var Серый = '#e9e9e9'; // Код цвета для серого
  var ВесьДиапазон = ТаблицаЛист_2.getRange((ПоследняяСтрока+1), 1);
  ВесьДиапазон.setBackground(Серый);

  // делаем окантовку границ ячеек:

  var ПоследняяСтрока_2 = ТаблицаЛист_2.getLastRow();
  var ПоследнийСтолбец = ТаблицаЛист_2.getLastColumn();
  var Границы = ТаблицаЛист_2.getRange((ПоследняяСтрока + 1), 1, 1, 2);
  Границы.setBorder(true, true, true, true, true, true, "white", SpreadsheetApp.BorderStyle.SOLID_THICK); // Устанавливаем границы для диапазона ячеек
  
  // перекрашиваем соседнюю ячейку в бежевый и придаем ей тип Дата:

  var СамаДата = ТаблицаЛист_2.getRange((ПоследняяСтрока+1), 2);
  СамаДата.setNumberFormat("dd.mm.yyyy");
  var Бежевый = '#fff2cc'; // Код цвета для бежевого
  СамаДата.setBackground(Бежевый);

  //добавляем текст в столбец Е и красим в белый:

  var НеУдалять = ТаблицаЛист_2.getRange((ПоследняяСтрока + 1), 5);
  НеУдалять.setValue("НЕ УДАЯТЬ!");
  var Белый = '#ffffff'; // Код цвета для белого
  НеУдалять.setFontColor(Белый);

  // добавляем шапку:

  var МодельАвто = ТаблицаЛист_2.getRange((ПоследняяСтрока + 2), 1);
  МодельАвто.setValue("Модель авто");

  var Дата_2 = ТаблицаЛист_2.getRange((ПоследняяСтрока + 2), 2);
  Дата_2.setValue("Дата");

  var Водитель = ТаблицаЛист_2.getRange((ПоследняяСтрока + 2), 3);
  Водитель.setValue("Водитель");
  
  var Плечо = ТаблицаЛист_2.getRange((ПоследняяСтрока + 2), 4);
  Плечо.setValue("Плечо");

  var КоличествоРейсов = ТаблицаЛист_2.getRange((ПоследняяСтрока + 2), 5);
  КоличествоРейсов.setValue("Кол-во рейсов");

  var Доходы = ТаблицаЛист_2.getRange((ПоследняяСтрока + 2), 6);
  Доходы.setValue("Доходы");

  var Расходы = ТаблицаЛист_2.getRange((ПоследняяСтрока + 2), 7);
  Расходы.setValue("Расходы");

  var ВыполнениеПлана = ТаблицаЛист_2.getRange((ПоследняяСтрока + 2), 8);
  ВыполнениеПлана.setValue("Выполнение плана");

  var ЗПВодителя = ТаблицаЛист_2.getRange((ПоследняяСтрока + 2), 9);
  ЗПВодителя.setValue("З/П водителя");

  var ЗПВодит_Процент = ТаблицаЛист_2.getRange((ПоследняяСтрока + 2), 10);
  ЗПВодит_Процент.setValue("З/П водителя + процент");
  
  var Суточные = ТаблицаЛист_2.getRange((ПоследняяСтрока + 2), 11);
  Суточные.setValue("Суточные");

  // закрышиваем поле в серый и делаем белые границы:

  var ШапкаДиапазон = ТаблицаЛист_2.getRange((ПоследняяСтрока + 2), 1, 1, 11);
  ШапкаДиапазон.setBackground(Серый);
  ШапкаДиапазон.setBorder(true, true, true, true, true, true, "white", SpreadsheetApp.BorderStyle.SOLID_THICK); // Устанавливаем границы для диапазона ячеек

  // для суммы прибыли делаем спец ячейку с датой справа от основной таблицы и перекрашиваем текст в белый цвет:

  var ДляСуммыПрибыли = ТаблицаЛист_2.getRange((ПоследняяСтрока + 2), 13);
  ДляСуммыПрибыли.setFontColor(Белый);
  ДляСуммыПрибыли.setNumberFormat("dd.mm.yyyy");
  var ДляСуммыПрибылиФормула = '=IF($B$' + (ПоследняяСтрока + 1) + '=0;" ";$B$' + (ПоследняяСтрока + 1) + ')';
  ДляСуммыПрибыли.setFormula(ДляСуммыПрибылиФормула);
}
